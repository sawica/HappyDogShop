<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - moja aplikacja platformy ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HappyDog Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    
                    <li>@Html.ActionLink("O nas", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Rejestracja", "Create", "User")</li>
                    <li  class="nav-item dropdown show" >
                        <a  id="admin" style="display:none; :hover {background-color: #e43e86} "  class="btn dropdown-toggle" href="#" data-toggle="dropdown">Admin</a>
                        <div class="dropdown-menu">
                            <a >@Html.ActionLink("Kategorie", "Index", "Categories")</a>
                            <a >@Html.ActionLink("Promocje", "Index", "Sales")</a>
                            <a >@Html.ActionLink("Produkty", "Index", "Products")</a>
                            <a >@Html.ActionLink("Użytkownicy", "Index", "User")</a>
                        </div>
                    </li>       
                    <li style="display:block" id="login">@Html.ActionLink("Login", "Index", "Login")</li>
                    <li class = "navbar-brand" style="padding-top: 15px; padding-left:  500px" >@Session["userName"]</li>
                    <li style="display:none" id="logout">@Html.ActionLink("Wyloguj", "LogOut", "Login")</li>   
                    <script type="text/javascript">



                     if (@Session["userId"] !== 0 )
                     {
                         console.log("zalogowano")
                         document.getElementById('logout').style.display='block'
                         document.getElementById('login').style.display='none'

                         let isAdmin = '@Session["isAdmin"]' 
                         if (isAdmin === 'True')
                         {
                            console.log("admin " + isAdmin)
                            document.getElementById('admin').style.display='block'

                         }
                     }
                     
                     else 
                     {
                         document.getElementById('logout').style.display='none'
                         document.getElementById('login').style.display='block'
                         document.getElementById('admin').style.display='none'
                     }
                         

                    </script>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <img src=""/>
        @RenderBody()
        <hr />
        <footer style=" color: #e43e86">
            <p>&copy; @DateTime.Now.Year - HappyDog Shop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
