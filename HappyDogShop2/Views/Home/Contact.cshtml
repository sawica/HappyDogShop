@{
    ViewBag.Title = "Contact";
}
<div style=" border-style: double; border-radius: 8px; border-color: #f7e6cf; padding: 30px; margin: 50px;" class="sawibox form-horizontal ">
    <h2>Formularz kontaktowy:</h2>
    <hr style="height: 1px; background-color: #e43e86; color: #e43e86" />
    <form method="post" action="/Home/Contact">
        <div class="form-group ">
            <strong class = "control-label col-md-2">Imie:   </strong>
            <input style="border-style: double; border-radius: 8px; border-color: #f7e6cf;" class="checkbox" type="text" name="customerName" />
        </div>
    
        <div class="form-group">
            <strong class = "control-label col-md-2">Adres email:</strong>
            <input style="border-style: double; border-radius: 8px; border-color: #f7e6cf;" class="checkbox" type="text" name="customerEmail" />
        </div>
        
        <div class="form-group">
                        <strong class = "control-label col-md-2">Sczegóły problemu:</strong> <br />
            <div >
            <textarea style="margin: 0"class="sawibox" name="customerRequest" cols="45" rows="4"></textarea>
            </div>
        </div>
    
        <div>
            <input type="submit" value="Wyślij" class="btn btn-default" style="margin-left: 215px; border-color: #e43e86" />
        </div>
    </form>
</div>




