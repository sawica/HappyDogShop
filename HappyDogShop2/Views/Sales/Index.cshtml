@model IEnumerable<HappyDogShop2.Models.Sale>

@{
    ViewBag.Title = "Index";
}

<h4>Promocje:</h4>

<p>
    @Html.ActionLink("Utwórz nową", "Create")
</p>

<form asp-controller="Sales" asp-action="Index" method="get">
    <p>
        Wyszukaj: <input type="text" name="SearchString"/>
        <input type="submit" value="Szukaj"/>
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueInPercent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValueInPercent)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.SaleId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.SaleId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.SaleId })
        </td>
    </tr>
}

</table>
