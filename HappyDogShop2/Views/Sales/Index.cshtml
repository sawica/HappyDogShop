@model IEnumerable<HappyDogShop2.Models.Sale>

@{
    ViewBag.Title = "Index";
}

<h4>Promocje:</h4>

<p>
    @Html.ActionLink("Utwórz nową", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Start_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value_in_percent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Start_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value_in_percent)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.SaleId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.SaleId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.SaleId })
        </td>
    </tr>
}

</table>
