@model IEnumerable<HappyDogShop2.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h4>Kategorie:</h4>

<p>
    @Html.ActionLink("Utwórz nową", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHidden)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ParentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsHidden)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.CategoryId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.CategoryId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.CategoryId })
            @Html.ActionLink("Produkty",  "AdminIndex", new { categoryId=item.CategoryId, Controller= "Products" })
        </td>
    </tr>
}

</table>
